   "source": [
    "import torch\n",
    "\n",
    "x = torch.tensor([1.0], requires_grad=True)\n",
    "y = (x + 1) ** 2\n",
    "\n",
    "# 假设我们想要将梯度缩放为 2\n",
    "loss = y\n",
    "loss.backward(gradient=torch.tensor([2.0]))\n",
    "\n",
    "print(x.grad)  # 输出: tensor([4.])"
   ],
